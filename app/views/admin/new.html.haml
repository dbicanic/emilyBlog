- provide(:title, 'Create Admin')
%h1 Create Admin
.row
  .col-md-6.col-md-offset-3
    = form_for @admin, url: new_admin_path(@admin) do |f|
      = f.label :name
      = f.text_field :name
      = f.label :email
      = f.email_field :email
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation
      = f.submit "Create new admin", class: "btn btn-primary"
